<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameActivity">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="@dimen/sp_32"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_1_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/ic_horizontal_swap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_2_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_120"
        android:src="@drawable/ic_horizontal_swap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_8_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_120"
        android:src="@drawable/ic_vertical_swap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_7_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_48"
        android:src="@drawable/ic_vertical_swap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civ_8_btn" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_3_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/ic_vertical_swap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_4_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/ic_vertical_swap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civ_3_btn" />

    <RelativeLayout
        android:id="@+id/rl_matrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintEnd_toStartOf="@id/civ_3_btn"
        app:layout_constraintStart_toEndOf="@id/civ_8_btn"
        app:layout_constraintTop_toBottomOf="@id/civ_1_btn">

        <GridView
            android:id="@+id/gv_matrix_layout"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:columnWidth="@dimen/dp_64"
            android:horizontalSpacing="@dimen/dp_16"
            android:numColumns="3"
            android:stretchMode="none"
            android:verticalSpacing="@dimen/dp_16" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_6_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/ic_horizontal_swap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_matrix" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_5_btn"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_120"
        android:src="@drawable/ic_horizontal_swap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_matrix" />

    <Button
        android:id="@+id/btn_solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_solution"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/light_outline_bgn"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>