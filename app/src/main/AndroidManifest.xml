<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oneside">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_round_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.AboutActivity" />
        <activity android:name=".ui.activities.HowToPlayActivity" />
        <activity android:name=".ui.activities.ResumeActivity" />
        <activity android:name=".ui.activities.LandingActivity" />
        <activity android:name=".ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.LevelActivity" />
        <activity android:name=".ui.activities.SolutionActivity" />
        <activity android:name=".ui.activities.GameActivity" />
    </application>

</manifest>